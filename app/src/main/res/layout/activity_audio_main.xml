<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AudioMain">

    <Button
            android:text="Modo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnModo" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp" android:layout_marginTop="248dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.004"
    />
    <Button
            android:text="Ring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRing" android:layout_marginTop="248dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnSilencio" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btnModo" android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"/>
    <Button
            android:text="Vibrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVibrar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintStart_toEndOf="@+id/btnRing" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="248dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Silencio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSilencio" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="148dp"
            android:layout_marginStart="148dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="124dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>